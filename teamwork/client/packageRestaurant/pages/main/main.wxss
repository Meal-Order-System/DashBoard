.table-cells {
  position: relative;
  background-color: #fff;
  line-height: 1.411;
  font-size: 17px;
}

.order-cells {
  position: relative;
  background-color:#fff;
  line-height: 1.411;
  font-size: 17px;
  border-style: solid;
  border-color: silver;
  border-width:1px;
  background: white;
  margin-top:10px;
}

.table-cells:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.table-cells:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}

.table-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.order-cell {
  padding:5px 15px;
  margin-bottom: 30px;
}



.table-cell:before {
  content: " ";
